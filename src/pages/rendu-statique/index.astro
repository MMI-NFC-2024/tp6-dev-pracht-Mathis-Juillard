---
import Layout from "../../layouts/Layout.astro";
import penguinsRaw from "../../assets/penguins.json";

const species = [...new Set(penguinsRaw.map(d => d.species))];
---

<Layout title="TP6 — Rendu statique : index">
  <div class="mb-6">
    <div class="kicker">Routes statiques</div>
    <h1 class="page-title">Prérendu</h1>
    <p class="text-slate-400">Pages construites au build avec <code>getStaticPaths</code>.</p>
  </div>

  <div class="card p-5">
    <ul class="grid sm:grid-cols-2 md:grid-cols-3 gap-3">
      {species.map(s => (
        <li>
          <a class="block p-4 rounded-xl border border-white/10 hover:border-white/20
                     bg-slate-900/30 hover:bg-white/5 transition"
             href={`/rendu-statique/${encodeURIComponent(s)}`}>
            <div class="font-medium">{s}</div>
            <div class="text-xs text-slate-400">page prérendue</div>
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>
